---
import ContentLayout from "./ContentLayout.astro";
import { parseExcerpt } from "./utils";

const { frontmatter } = Astro.props;
const title = frontmatter.title;
const compiledContent = await Astro.props.compiledContent();
const description = parseExcerpt(compiledContent);
---

<ContentLayout
    title={title}
    description={description}
    showPreview={false}
    breadcrumb={{
        label: "Back to All Licenses", 
        url: "/licenses"
    }}
>
    <slot />
</ContentLayout>
