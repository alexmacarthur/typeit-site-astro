---
import Logo from "../components/Logo.astro";
import LogoIcon from "../components/LogoIcon.astro";

import "../tailwind.css";
import "../global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script defer data-domain="typeitjs.com" src="/js/numbers.js"></script>
  </head>

  <body class="h-screen w-screen grid content-center">
    <LogoIcon
        classes="w-screen h-[150vh] md:w-[100vw] absolute z-[-1] opacity-5 top-[-15vw] md:top-[-20vw] left-[-15vw] md:left-[-20vw] transform rotate-[-10deg]"
      />
    <div class="text-center">
      <Logo classes="text-7xl mb-4" />

      <p class="text-3xl mt-3 max-w-2xl mx-auto text-slate-700">
        The most versatile JavaScript typewriter library on the planet.
      </p>
    </div>
  </body>
</html>

<style is:global>
  @import "../global.css";

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    background: linear-gradient(
      to bottom right,
      theme("colors.gray.600"),
      theme("colors.gray.800")
    );
    line-height: 1;
    letter-spacing: -0.04em;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    @apply py-3;
  }

  p a {
    @apply text-sky-600;
  }

  .button {
    @apply border-2 rounded-md border-black px-3 py-2;
  }
</style>
