---
import BaseLayout from "./Layout.astro";

interface Breadcrumb {
    label: string;
    url: string;
}

interface Props {
    title: string;
    description: string;
    frontmatter?: {
        title: string;
        description: string;
    };
    showPreview?: boolean;
    breadcrumb?: Breadcrumb;
}

const { frontmatter, showPreview = true, breadcrumb = undefined } = Astro.props;
const title = frontmatter?.title || Astro.props.title;
const description = frontmatter?.description || Astro.props.description;
---

<BaseLayout
    title={title}
    description={description}
    breadcrumb={breadcrumb}
>
    <div class="max-w-3xl mx-auto px-2">

        { breadcrumb && 
            <nav aria-label="Breadcrumb" class="breadcrumb">
                <ul>
                    <li>
                        <a href={breadcrumb.url}>
                            ‚Üê {breadcrumb.label}
                        </a>
                    </li>
                </ul>
            </nav>
        }
        
        <h1 class="md:text-6xl mb-8">{title}</h1>

        { showPreview && 
            <span class="text-lg text-gray-600 block -mt-8 mb-6">
                {description}
            </span>
        }
        
        <div class="prose">
            <slot />
        </div>
    </div>
</BaseLayout>
